<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"

    android:elevation="32dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="6dp"
        android:background="@drawable/sparkle"

        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_id"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="21sp"
            android:visibility="gone"
            android:textStyle="italic"/>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >

         <ImageView
             android:id="@+id/iv_Pokemon"
             android:textColor="@color/black"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:text="Image pokemon"
             android:textSize="21sp" />

         <TextView
             android:id="@+id/tv_name"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Nama Pokemon"
             android:layout_marginTop="21dp"
             android:layout_marginLeft="7dp"
             android:maxLength="16"
             android:fontFamily="@font/fontbener"
             android:layout_toRightOf="@id/iv_Pokemon"
             android:textSize="12sp"
             android:textStyle="bold"/>

         <ImageView
             android:id="@+id/draw_panah"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginTop="11dp"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@id/tv_name"
             android:src="@drawable/panah" />

         <ImageView
             android:id="@+id/iv_Evo"
             android:textColor="@color/black"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginLeft="15dp"

             android:layout_toRightOf="@id/draw_panah"

             android:text="Evo Pokemon"
            />

         <TextView
             android:id="@+id/tv_Evoname"

             android:layout_width="wrap_content"
             android:layout_marginTop="21dp"
             android:fontFamily="@font/fontbener"
             android:layout_height="wrap_content"
             android:layout_marginLeft="7dp"
             android:text="Nama Evo"


             android:textSize="12sp"
android:maxLength="16"

             android:textStyle="italic"/>
     </LinearLayout>








            <TextView
                android:id="@+id/tv_entry"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entry pokemon"
                android:textSize="21sp"
                android:visibility="gone"
                android:textStyle="italic"/>




            <TextView
                android:id="@+id/tv_type"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_Ability"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ability Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_HP"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HP Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_ATK"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATK Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_DEF"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEF Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_SpA"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SpA Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_SpD"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SpD Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_SPE"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPE Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_Move1"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move1 Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_Move2"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move2 Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_Move3"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Move3 Pokemon"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_Move4"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Move4 Pokemon"
                android:visibility="gone"
                android:textSize="21sp" />





