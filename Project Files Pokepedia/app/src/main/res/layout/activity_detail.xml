<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.DetailActivity"
    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lapras"
        ></pl.droidsonroids.gif.GifImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/iv_pokemon"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:fontFamily="@font/fontbener"
                android:text="Name" />


            <ImageView
                android:id="@+id/draw_panah"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@id/tv_name"
                android:src="@drawable/panah" />

            <ImageView
                android:id="@+id/iv_evo"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:text="Evo Pokemon"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_namaevo"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:padding="6dp"
                android:fontFamily="@font/fontbener"
                android:layout_toStartOf="@id/iv_evo"
                android:layout_below="@id/iv_evo"
                android:layout_alignParentEnd="true"
                android:text="namaevo" />


            <!--            </RelativeLayout>-->




        </RelativeLayout>

        <TextView
            android:id="@+id/tv_textentry"
            style="@style/TextAppearance.AppCompat.Medium"
