            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:justificationMode="inter_word"
            android:padding="6dp"
            android:textStyle="bold"
            android:fontFamily="@font/fontbener"
            android:text="Entry" />

        <TextView
            android:id="@+id/tv_entry"
